{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "plugin:jest/recommended",
        "airbnb"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest"
    },
    "plugins": [
        "react", "jest"
    ],
    "rules": {
        "padding-line-between-statements": [
            "error",
            { "blankLine": "always", "prev": "block-like", "next": "*"},
            { "blankLine": "always", "prev": "multiline-expression", "next": "*"}
        ],
        "curly": [
            "error",
            "all"
        ],
        "brace-style" : [
            1,
            "1tbs"
        ]
    },
    "ignorePatterns": ["serviceWorker.js"]
}
